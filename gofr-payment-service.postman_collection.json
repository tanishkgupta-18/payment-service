	"item": [
		{
			"name": "Create Payment",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201); \r",
							"});\r",
							"\r",
							"pm.test(\"Has paymentID in response\", function () {\r",
							"    const json = pm.response.json();\r",
							"    pm.expect(json.data).to.have.property(\"paymentID\");\r",
							"});\r",
							"pm.test(\"paymentID is a number\", function () {\r",
							"    const id = pm.response.json().data.paymentID;\r",
							"    pm.expect(id).to.be.a(\"number\");\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
